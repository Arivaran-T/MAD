<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:backgroundTint="@color/gray"
        android:padding="10sp"
        android:layout_marginVertical="5sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reviewUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border"
                android:backgroundTint="@color/primary_orange"
                android:fontFamily="@font/opensanssemibold"
                android:paddingHorizontal="10sp"
                android:paddingVertical="3sp"
                android:text="@string/username"
                android:textColor="@color/primary_black"
                android:textSize="13sp" />

            <RatingBar
                android:id="@+id/userRating"
                style="@style/Base.Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10sp"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="0"
                android:stepSize=".5" />
        </LinearLayout>

        <TextView
            android:textColor="@color/primary_black"
            android:id="@+id/userReview"
            android:textFontWeight="800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:fontFamily="@font/opensansbold"
            android:text="Any User feedback"
            android:textSize="15sp" />

        <TextView
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="5sp"
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1999/12/12"
            android:textColor="@color/primary_black"
            android:textSize="12sp" />
        <TextView
            android:visibility="gone"
            android:id="@+id/owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:backgroundTint="@color/secondary_blue"
            android:fontFamily="@font/opensanssemibold"
            android:paddingHorizontal="10sp"
            android:paddingVertical="3sp"
            android:text="Owner"
            android:textColor="@color/primary_black"
            android:textSize="13sp" />
        <TextView
            android:visibility="gone"
            android:textColor="@color/primary_black"
            android:id="@+id/ownerreply"
            android:textFontWeight="800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:fontFamily="@font/opensansbold"
            android:text="Any User feedback"
            android:textSize="15sp" />
        <EditText
            android:inputType="text"
            android:id="@+id/salonreply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_black"
            android:textSize="17sp"
            android:fontFamily="@font/opensanssemibold"/>
        <Button
            android:id="@+id/saolReplySubmit"
            android:layout_gravity="end"
            android:backgroundTint="@color/primary_black"
            android:background="@drawable/textview_border"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:text="@string/reply"
            android:fontFamily="@font/opensansbold"
            android:textColor="@color/white"
            android:textSize="13sp"/>

    </LinearLayout>


</LinearLayout>