<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upcommingAppointmentsSalon">
    <ProgressBar
        android:layout_marginVertical="15sp"
        android:id="@+id/loadAppontment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/nothing1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currently No Appointments!"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginVertical="10sp"
        android:textColor="@color/primary_orange_dark"
        android:visibility="gone"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/upcommingAppointmentsSalonRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>


</FrameLayout>