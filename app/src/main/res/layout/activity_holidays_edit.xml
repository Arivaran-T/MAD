<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:orientation="vertical"
    tools:context=".HolidaysEdit">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="73dp"
        android:background="@color/primary_orange_dark">

        <ImageButton
            android:id="@+id/bk_btn_editHD"
            android:onClick="goBackToHolidays"
            android:layout_width="88dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/primary_orange_dark"
            android:tint="@color/white"
            app:srcCompat="?attr/actionModeCloseDrawable"
            tools:ignore="UseAppTint" />

        <TextView
            android:layout_width="132dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="189dp"
            android:layout_marginRight="189dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="center_vertical"
            android:text="Edit Holiday"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="102dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="50sp"
        android:layout_marginRight="5sp"
        android:layout_marginLeft="5sp"
        android:background="@drawable/card"
        android:backgroundTint="@color/gray"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="left"
            android:text="PickUp a Date"
            android:textColor="@color/primary_black"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/editedDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:drawableTint="@color/white_dark"
                android:fontFamily="@font/opensansbold"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/primary_black"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/editDatePicker"
                android:onClick="PickDate"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="300dp"
                android:background="@color/light_black"
                android:tint="@color/white"
                app:srcCompat="?attr/actionModeCloseDrawable"
                tools:ignore="UseAppTint"


                />


        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:fontFamily="@font/opensanssemibold"
            android:gravity="left"
            android:text="Remark"
            android:textColor="@color/primary_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editedRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5sp"
            android:drawableTint="@color/white_dark"
            android:fontFamily="@font/opensansbold"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/primary_black"
            android:textSize="16sp" />


        <Button
            android:id="@+id/btn_editHD"
            android:layout_width="160sp"
            android:layout_height="43sp"
            android:layout_marginVertical="5sp"
            android:background="@drawable/card"
            android:backgroundTint="@color/primary_black"
            android:clickable="true"
            android:fontFamily="@font/opensansbold"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="19sp" />


    </LinearLayout>

</LinearLayout>