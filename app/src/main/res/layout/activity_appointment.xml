<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:orientation="vertical"
    tools:context=".AppointmentC">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="23dp"
            tools:layout_editor_absoluteY="104dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:fontFamily="@font/opensanssemibold"
                    android:gravity="center"
                    android:text="@string/reserve"
                    android:textAllCaps="true"
                    android:textSize="26sp"

                    />

                <Button
                    android:id="@+id/btnDate"
                    android:layout_width="155dp"
                    android:layout_height="43dp"
                    android:gravity="center"
                    android:fontFamily="@font/opensanssemibold"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/textview_border"
                    android:text="@string/pickdate"
                    android:onClick="PickDate"
                    android:textColor="@color/primary_black"
                    android:textSize="16dp"
                    app:backgroundTint="@color/secondary_blue" />

                <EditText
                    android:id="@+id/tvSelectedDate"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="140dp"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:hint=""
                    android:textColor="@color/primary_black"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/btn_time"
                    android:layout_width="155dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="200dp"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/opensanssemibold"
                    android:gravity="center"
                    android:onClick="@string/PickTime"
                    android:text="Pick Time"
                    android:textColor="@color/primary_black"
                    android:textSize="16dp"
                    app:backgroundTint="@color/secondary_blue" />

                <EditText
                    android:id="@+id/in_time"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="250dp"
                    android:gravity="center"
                    android:fontFamily="@font/opensansbold"
                    android:hint=""
                    android:textColor="@color/primary_black"
                    android:textSize="20dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="35sp"
                    android:layout_marginTop="315dp"
                    android:text="@string/Advancepayment"
                    android:fontFamily="@font/opensanssemibold"
                    android:textSize="20dp" />

                <TextView
                    android:paddingHorizontal="4sp"
                    android:id="@+id/Advancepayment"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="311dp"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/opensansbold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    app:backgroundTint="@color/primary_black" />

                <Button
                    android:layout_marginBottom="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="380dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/custombutton"
                    android:backgroundTint="@color/gray"
                    android:fontFamily="@font/opensansbold"
                    android:onClick="onClickCompletePayment"
                    android:text="COMPLETE RESERVATION"
                    android:textColor="@color/primary_black"
                    android:textSize="20dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>