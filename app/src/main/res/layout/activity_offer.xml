<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    tools:context=".BothSignUp">
<ScrollView
    android:padding="15sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.recyclerview.widget.RecyclerView
            android:orientation="vertical"
            android:id="@+id/offerRecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="20dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="104dp"
            android:layout_marginTop="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:orientation="vertical"
                android:padding="15sp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginVertical="10sp"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:text="Offer Title"
                    android:textColor="@color/dark_black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textView8"
                    android:layout_width="329dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/opensansbold"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="184dp"
                    android:layout_height="51dp"
                    android:layout_gravity="left"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:text="Offer Description"
                    android:textColor="@color/dark_black"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/textView10"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_border"
                    android:fontFamily="@font/opensansbold"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textColor="@color/dark_black"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="184dp"
                    android:layout_height="51dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10sp"
                    android:fontFamily="@font/opensansregular"
                    android:gravity="center_vertical"
                    android:text="Valid Until"
                    android:textColor="@color/dark_black"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="329dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/card"
                    android:fontFamily="@font/opensansbold"
                    android:text="PICK DATE"
                    app:backgroundTint="@color/secondary_blue" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="10sp"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/opensansbold"
                    android:text="@string/add"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary_black" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>



</LinearLayout>