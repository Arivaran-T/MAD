<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:backgroundTint="@color/white_dark"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="10sp"
                android:paddingTop="20sp"
                android:paddingBottom="15sp">

                <RelativeLayout
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/dp"
                        android:layout_width="120sp"
                        android:layout_height="120sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="10sp"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/gray"
                        android:padding="20sp"
                        android:src="@drawable/ic_friends" />

                    <ImageView
                        android:id="@+id/touch"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginBottom="8dp"
                        android:clickable="true"
                        android:src="@drawable/ic_baseline_photo_library_24" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/robotoblack"
                        android:text="@string/salonname"
                        android:textAllCaps="true"
                        android:textColor="@color/dark_black"
                        android:textSize="23sp" />

                    <RatingBar
                        android:id="@+id/salonRating"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize=".5" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_location_on_24" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="address,lane"
                        android:textColor="@color/dark_black"
                        android:textSize="13sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_email_24" />

                    <TextView
                        android:id="@+id/mail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="info@gmail.com"
                        android:textColor="@color/dark_black"
                        android:textSize="13sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22sp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_call_24" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="0778862173"
                        android:textColor="@color/dark_black"
                        android:textSize="13sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:layout_marginTop="5sp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22sp"
                        android:layout_height="22sp"
                        android:src="@drawable/ic_like" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="(300)"
                        android:textColor="@color/dark_black"
                        android:textSize="13sp"

                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginVertical="10sp"
                android:layout_marginLeft="5sp"
                android:fontFamily="@font/opensansbold"
                android:text="@string/services"
                android:textColor="@color/dark_black"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:backgroundTint="@color/white_dark"
                android:orientation="horizontal"
                android:padding="0sp">

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_marginRight="5sp">

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10sp"
                        android:orientation="horizontal">


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recylersalon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            </androidx.recyclerview.widget.RecyclerView>



                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>

                    <TextView
                        android:padding="5sp"
                        android:layout_gravity="left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10sp"
                        android:fontFamily="@font/opensansbold"
                        android:text="@string/reviews"
                        android:textColor="@color/primary_black"
                        android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycleReviewSalon"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>