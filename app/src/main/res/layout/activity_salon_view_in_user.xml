<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_orange"
    android:orientation="vertical"
    tools:context=".SalonViewInUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15sp">

                <LinearLayout
                    android:id="@+id/salonViewAsUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25sp"
                    android:background="@drawable/textview_border"
                    android:backgroundTint="@color/gray"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="0sp">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="218dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/salonloader"
                        android:scaleType="fitXY"
                        tools:layout_editor_absoluteX="-5dp"
                        tools:layout_editor_absoluteY="3dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6sp"
                        android:fontFamily="@font/opensansbold"
                        android:paddingLeft="10sp"
                        android:textColor="@color/primary_black"
                        android:textSize="27sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginVertical="6sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/salonRating"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10sp"
                            android:isIndicator="true"
                            android:max="5"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize=".5" />

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/opensansregular"
                            android:text="(240)"
                            android:textColor="@color/primary_black"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_location_on_24" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensanssemibold"
                            android:paddingLeft="5sp"
                            android:textColor="@color/primary_black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="15sp"
                            android:clickable="true"
                            android:fontFamily="@font/opensanssemibold"
                            android:gravity="right"
                            android:onClick="onViewLocationClick"
                            android:text="@string/viewLocation"
                            android:textColor="@color/secondary_blue" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6sp"
                        android:layout_marginTop="10sp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_call_24" />

                        <TextView
                            android:id="@+id/contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/opensanssemibold"
                            android:paddingLeft="5sp"
                            android:textColor="@color/primary_black"
                            android:textSize="15sp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginVertical="20sp"
                        android:layout_marginBottom="10sp"
                        android:background="@color/primary_black"
                        android:backgroundTint="@color/primary_orange" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40sp"
                        android:layout_marginBottom="10sp">

                        <ImageView
                            android:id="@+id/liking"
                            android:layout_width="40sp"
                            android:layout_height="40sp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="15dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="0dp"
                            android:src="@drawable/like" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="40sp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="right"
                            android:layout_marginVertical="0sp"
                            android:layout_marginTop="-1dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginRight="-1dp"
                            android:layout_marginBottom="1dp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_orange_dark"
                            android:fontFamily="@font/opensanssemibold"
                            android:onClick="OnReserveClick"
                            android:paddingHorizontal="10sp"
                            android:text="@string/reserve"
                            android:textColor="@color/primary_black"
                            android:textSize="20sp" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15sp"
                    android:background="@drawable/card"
                    android:backgroundTint="@color/gray"
                    android:orientation="vertical"
                    android:padding="20sp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gallery"
                        android:textSize="18sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1sp"
                        android:layout_marginVertical="10sp"
                        android:background="@color/primary_black"
                        android:backgroundTint="@color/primary_black" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/galleryRecycler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" />
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/textview_border"
                    android:backgroundTint="@color/gray"
                    android:orientation="vertical"
                    android:padding="10sp"
                    android:paddingBottom="10sp">

                    <LinearLayout
                        android:paddingTop="15sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reviewUsername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_black"
                            android:backgroundTint="@color/primary_black"
                            android:fontFamily="@font/opensanssemibold"
                            android:paddingHorizontal="10sp"
                            android:paddingVertical="3sp"
                            android:text="@string/username"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <RatingBar
                            android:id="@+id/userRating"
                            style="@style/Base.Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10sp"
                            android:isIndicator="false"
                            android:clickable="true"
                            android:max="5"
                            android:numStars="5"
                            android:rating="0"
                            android:stepSize=".5" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8sp"
                        android:fontFamily="@font/opensanssemibold"
                        android:text="Your Feedback"
                        android:textSize="10sp" />

                    <EditText
                        android:id="@+id/userReview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensanssemibold"
                        android:textColor="@color/primary_black"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right">

                            <Button
                                android:id="@+id/addReview"
                                android:background="@drawable/textview_border"
                                android:backgroundTint="@color/primary_orange_dark"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:fontFamily="@font/opensanssemibold"
                                android:text="@string/add"
                                android:layout_gravity="right" />
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="30sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:orientation="vertical"
                        android:id="@+id/reviewrecycler1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
<LinearLayout
    android:gravity="center_horizontal"
    android:id="@+id/overlay"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ProgressBar
        android:id="@+id/progress2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>

</RelativeLayout>