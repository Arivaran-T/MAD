<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment"
    android:background="@color/primary_orange">
    <HorizontalScrollView
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="150sp">
        <LinearLayout
            android:padding="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="115sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="@color/primary_orange"
                android:background="@drawable/card">
                <TextView
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/salonname"
                    android:fontFamily="@font/robotoblack" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="2021-12-31"
                    android:layout_margin="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="115sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="@color/primary_orange"
                android:background="@drawable/card">
                <TextView
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/salonname"
                    android:fontFamily="@font/robotoblack" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="2021-12-31"
                    android:layout_margin="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginRight="15sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_width="115sp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:backgroundTint="@color/primary_orange"
                android:background="@drawable/card">
                <TextView
                    android:layout_marginTop="15sp"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/salonname"
                    android:fontFamily="@font/robotoblack" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="2021-12-31"
                    android:layout_margin="15sp"/>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15sp">
            <LinearLayout
                android:id="@+id/salonViewAsUser"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:backgroundTint="@color/gray"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150sp"
                    android:background="@color/red"
                    />
                <TextView
                    android:layout_marginVertical="6sp"
                    android:paddingLeft="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/salonname"
                    android:textSize="27sp"
                    android:fontFamily="@font/opensansbold"
                    android:textColor="@color/primary_black"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_marginVertical="6sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RatingBar
                        android:id="@+id/salonRating"
                        style="@style/Base.Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10sp"
                        android:isIndicator="true"
                        android:max="5"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize=".5" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(240)"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/primary_black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="6sp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/ic_baseline_location_on_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addressOfDev"
                        android:textSize="12sp"
                        android:fontFamily="@font/opensansregular"
                        android:textColor="@color/primary_black"/>

                </LinearLayout>
                <View
                    android:backgroundTint="@color/primary_orange"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginVertical="10sp"
                    android:background="@color/primary_black" />
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:padding="10sp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginRight="10sp"
                            android:padding="10sp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.30AM"/>
                        <TextView
                            android:layout_marginRight="10sp"
                            android:padding="10sp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.30AM"/>
                        <TextView
                            android:layout_marginRight="10sp"
                            android:padding="10sp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.30AM"/>
                        <TextView
                            android:layout_marginRight="10sp"
                            android:padding="10sp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.30AM"/>
                        <TextView
                            android:layout_marginRight="10sp"
                            android:padding="10sp"
                            android:background="@drawable/textview_border"
                            android:backgroundTint="@color/primary_black"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:fontFamily="@font/opensanssemibold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8.30AM"/>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>          
        </LinearLayout>
    </ScrollView>


</LinearLayout>